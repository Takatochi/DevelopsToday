# Application Configuration
APP_NAME=spy-cats-api
APP_VERSION=1.0.0
HTTP_PORT=8080
LOG_LEVEL=info
SWAGGER_ENABLED=false

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=spy_cats
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=spy_cats
PG_URL=postgres://spy_cats:your_secure_password_here@postgres:5432/spy_cats?sslmode=disable

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_at_least_32_characters
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
JWT_SIGNING_ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/nginx.crt
SSL_KEY_PATH=/etc/nginx/ssl/nginx.key
